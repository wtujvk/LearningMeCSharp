
@{
    ViewData["Title"] = "美图秀秀案例";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var defaultimg = "/images/hjthu.jpg";
}

<div>
    <div>
        <img src="~/images/hjthu.jpg" />
      
        <img id="img1" src="/images/banner1.svg" style="max-width: 100%; max-height: 450px" />
        <input type="button" class="btn btn-default btn-success" value="上传图片" onclick="UploadImg('img1')" />
    </div>
</div>

@section Scripts
    {
    <script>
        var defaultimg = "@defaultimg";
        function UploadImg(imgid,w,h) {
            var title = "上传图片";
            layer.open({
                type: 2,
                area: ['800px', '600px'],
                title: title,
                content: "/html/img3.html?id=" + imgid+ "&w=" + w + "&h=" + h +"&defaultImg="+defaultimg
            });
        }
        function UpLoad(data,id) {
            $("#" + id).attr("src", data);
            console.log(data);
        }
    </script>
}


